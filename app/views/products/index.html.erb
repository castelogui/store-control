<h1>Products</h1>

<%= link_to "New product", new_product_path, class: "btn btn-success"  if authenticated? %>
<div id="products" class="row">
  <div class="row row-cols-1 row-cols-md-2 g-4">
    <% @products.each do |product| %>
      <div class="col-lg-3 col-md-4 col-sm-6 mb-3 mb-sm-0">
        <div class="card text-center">
          <% if product.featured_image.attached? %>
            <%= image_tag product.featured_image, class: 'card-img-top img-fluid'%>
          <% end %>
          <div class="card-body">
            <h5 class="card-title"><%= product.name %></h5>
          </div>
          <ul class="list-group list-group-flush">
            <li class="list-group-item">
              Estoque: <%= product.inventory_count %>
            </li>
          </ul>
          <div class="card-body">
            <%= link_to "Visualizar", product_path(product), class: "btn btn-primary" %>
          </div>
          <div class="card-footer">
            <small class="text-body-secondary">Criado em: <%= product.created_at.strftime('%d/%m/%Y %H:%M') %></small> </br>
            <small class="text-body-secondary">Atualizado em: <%= product.updated_at.strftime('%d/%m/%Y %H:%M') %></small>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>